<div class="titre-avatar position-relative">
  <li class="nav-item dropdown list-unstyled">
    <%= link_to root_path, class: "text-center mt-3 mb-3" do%>
      <h1>GeoJourney</h1>
    <% end %>
    <%= image_tag "avatar.jpg", class: "avatar dropdown-toggle position-absolute", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
      <% unless user_signed_in? %>
        <%= link_to "Sign in", new_user_session_path, class: "dropdown-item" %>
        <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
      <% else %>
        <%= link_to "Favourites", "#", class: "dropdown-item" %>
        <%= link_to "Create", new_itinerary_path, class: "dropdown-item" %>
        <%= link_to "Sign out", destroy_user_session_path, method: 'delete', class: "dropdown-item" %>
      <% end %>
    </div>
  </li>
  <p class= "navbar-subtitle">Unearth great geological discoveries along your journey</p>
</div>
