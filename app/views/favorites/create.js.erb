function displayCard(itineraryId){
  const card = document.querySelector(`#itinerary-${itineraryId}`);
  if (card){
    const html = '<%= j render "shared/card_itinerary_index", itinerary: @itinerary  %>'
    card.outerHTML = html;
  }
  else {
    const cardShow = document.querySelector('#card-show');
    const html = '<%= j render "shared/card_itinerary_show", itinerary: @itinerary %> '
    cardShow.innerHTML = html;
  }



}
displayCard(<%= @itinerary.id %>)
